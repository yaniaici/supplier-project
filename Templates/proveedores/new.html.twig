{% extends 'base.html.twig' %}
{% block title %}Nuevo proveedor{% endblock %}
{% block body %}
    <style>
        body {
            background-color: #ffffff;
            color: #000000;
            font-family: 'Roboto', sans-serif;
            font-size: 20px;
            margin: 0;
            padding: 0;
        }
        h1 {
            margin-bottom: 50px;
            font-size: 50px;
        }

        button {
            width: 300px;
            height: 50px;
            border-radius: 10px;
            border: 1px solid #000000;
            background-color: #000000;
            color: #ffffff;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            transition: 0.5s;
            margin-down: 20rem;
            margin-left: 20rem;
        }

        button:hover {
            background-color: #ffffff;
            color: #000000;
            transition: 0.5s;
        }
        
    </style>
    <div class="container">
        <h1>{{title}}</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}